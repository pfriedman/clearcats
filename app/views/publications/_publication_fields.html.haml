.span-18
  .span-9
    %p
      = f.label :ctsa_reporting_years, "CTSA Reporting Years"
      %br
      =h null_safe(f.object.ctsa_reporting_years.last)
      
    - unless faculty_member?
      %p
        = f.check_box "nucats_assisted"
        = f.label :nucats_assisted, "#{SYSTEM_CONFIG['grant_name']} Assisted"
    %p
      = f.check_box "ctsa_reportable"
      = f.label :ctsa_reportable, "#{ctsa_wording}"
    %p
      = f.label :pmid, "PMID"
      %br
      = f.text_field :pmid
      %br
      = link_to "PMCID to PMID Converter", "http://www.ncbi.nlm.nih.gov/sites/pmctopmid", :popup => true, :class => "external_link icon_link"
    %p
      = f.label :pmcid, "PMCID"
      %br
      = f.text_field :pmcid
    %p
      = f.label :nihms_number, "NIHMS Number"
      %br
      = f.text_field :nihms_number
    %p
      = f.label :missing_pmcid_reason, "Missing PMCID Reason"
      %br
      = f.text_field :missing_pmcid_reason
    %p
      = f.check_box :cited
      = f.label :cited, "Cited #{SYSTEM_CONFIG['grant_name']} (#{SYSTEM_CONFIG['grant_number']})"
    %p
      = f.label :citation_cnt, "Citation Count"
      = f.text_field :citation_cnt, :size => 4
  .span-9.last
    %p
      = f.label :formatted_publication_date, "Publication Date (mm/dd/yyyy)"
      %br
      = f.text_field :formatted_publication_date, :class => "datepicker"
    %p 
      = f.label :journal, "Journal"
      %br
      = f.text_field :journal
    %p 
      = f.label :title, "Title"
      %br
      = f.text_area :title
    %p 
      = f.label :abstract, "Abstract"
      %br
      = f.text_area :abstract

.buttons
  = f.submit "Save", :class => "close"