#publications
  
  %h3 Publications for #{@person}
  
  - if @publications
  
    - if @service
      = render 'publications/service_publications_table', :publications => @publications, :service => @service
    - else
      = render 'publications/publications_table', :publications => @publications
      .links
        = link_to 'List', people_path, :class => "list_link icon_link"
        = link_to 'Edit Person', edit_person_path(@person), :class => "edit_link icon_link"
        = link_to 'Edit Awards', person_awards_path(@person), :class => "edit_link icon_link"
