!!!

%html{ :xmlns =>"http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en" }
  %head
    %meta{ "http-equiv" => "content-type", :content => "text/html;charset=UTF-8" }
    %title= "ClearCATS :: " + h(yield(:title) || "Northwestern University")
    = stylesheet_link_tag('application', :media => "all")
    = stylesheet_link_tag('jquery-ui-1.8.1.custom')
    = stylesheet_link_tag('blueprint/screen', 'blueprint/print')
    = yield :stylesheet
    = javascript_include_tag("application", "jquery-1.4.2.min", "jquery-ui-1.8.1.custom.min", "jrails")
    = yield :javascript
    = yield(:head)
  %body
    .container
      #menu
        
      #header
        #banner
          = link_to("ClearCATS", "/", :class => "no_link")
          - if show_title?
            %span= " :: " + h(yield(:title))

      .clear

      - flash.each do |message_type, message|
        %div{ :class => "message", :id => message_type }
          = h(message)

      = yield

      #footer
        = link_to "Logout", "/logout"
        = "v. " + application_version