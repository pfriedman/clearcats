- stylesheet "people"
- title "Merge Records"

.page_section

  - form_tag do
    %p
      = label_tag :era_commons_username, "ERA Commons Username"
      %br
      = text_field_tag :era_commons_username, params[:era_commons_username]
    %p
      = label_tag :netid, "NetID"
      %br
      = text_field_tag :netid, params[:netid]
  
    .buttons
      = submit_tag "Merge", :disable_with => 'Merging...'

.links
  = link_to 'List', people_path, :class => "list_link icon_link" if current_user.permit?(:Admin, :User)