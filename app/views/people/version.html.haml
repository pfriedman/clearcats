- stylesheet "people"
- title "View Version"

.span-24
  .span-6.colborder
    %h4{ :class => "section_header" } Basic Information
    %p
      %b Last Name:
      %br
      = null_safe @person.last_name

    %p
      %b First Name:
      %br
      = null_safe @person.first_name 

    %p
      %b Middle Initial:
      %br
      = null_safe @person.middle_name 
      
    %p
      %b Net ID:
      %br
      = null_safe @person.netid
      
    %p
      %b Employee ID:
      %br
      = null_safe @person.employeeid

    %p
      %b eRA Commons Username:
      %br
      = null_safe @person.era_commons_username
      
    %p 
      %b Email:
      %br
      = null_safe @person.email
      
    %p
      %b Department Affiliation:
      %br
      = null_safe @person.department_affiliation 

    %p
      %b School Affiliation:
      %br
      = null_safe @person.school_affiliation 

    %p
      %b Last 4 digits SSN:
      %br
      = null_safe @person.last_four_of_ssn 

    %p
      %b Gender:
      %br
      = null_safe @person.gender
      
    %p
      %b Country:
      %br
      = null_safe @person.country
      
  .span-7.colborder
    %h4{ :class => "section_header" } Scholarly Information

    %p
      %b Degree Type 1:
      %br
      = null_safe @person.degree_type_one

    %p
      %b Degree Type 2:
      %br
      = null_safe @person.degree_type_two

    %p
      %b Position/title category:
      %br
      - if @person.institution_positions.blank?
        n/a
      - else
        - for institution_position in @person.institution_positions
          %div
            = null_safe institution_position

    %p
      %b Area of Expertise:
      %br
      = null_safe @person.specialty.to_s

  .span-6.last
    %h4{ :class => "section_header" } Trainee Questions
    %p
      %b Training Type:
      %br
      = null_safe @person.training_type

    %p
      %b Trainee Status:
      %br
      = null_safe @person.trainee_status
    
    .trainee_section
  
      %h4{ :class => "section_header" } Optional Information
      %p
        %b Ethnic background:
        %br
        = null_safe @person.ethnic_type

      %p
        %b Racial background:
        %br
        = null_safe @person.race_type

      %p
        %b From a disadvantaged background?
        %br
        = @person.disadvantaged_background? ? "Yes" : "No"

      %p
        %b Has a disability?
        %br
        = @person.has_disability? ? "Yes" : "No"
  .span-24
    .links
      = link_to 'All Versions', versions_person_path(@person), :class => "list_link icon_link"