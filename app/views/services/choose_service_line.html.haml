- title "New Service - Choose Service Line"

%p
  = @service.state

- form_for @service do |f|
  #projects
    %h3 Choose Service Line
    %ul
      - OrganizationalUnit.all(:order => :name).each do |ou|
        %li
          = ou.name
          - if !ou.service_lines.blank?
            %ul
              - ou.service_lines.all(:order => "name").each do |svc_line|
                %li 
                  = f.radio_button "service_line_id", svc_line.id
                  = f.label "service_line_id_#{svc_line.id}", svc_line.name
    .buttons
      = f.submit "Save", :disable_with => 'Saving...'